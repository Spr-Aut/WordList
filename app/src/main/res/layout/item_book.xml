<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="@dimen/padding_horizontal"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="5dp"
    android:id="@+id/WholeBookItem"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_horizontal_item"
        android:paddingVertical="@dimen/padding_vertical_item"
        >
        <TextView
            android:id="@+id/tvItemBookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小学人教版"
            style="@style/TextStyleOrigin"
            />
    </LinearLayout>



</androidx.cardview.widget.CardView>
