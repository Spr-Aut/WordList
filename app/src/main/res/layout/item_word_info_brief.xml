<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/view_item_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_horizontal"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp"
        >
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_horizontal_item"
            android:paddingBottom="@dimen/padding_vertical_item"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:background="@color/card_bg"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_item_origin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/TextStyleOrigin"
                    android:text="Hello"
                    />
                <TextView
                    android:id="@+id/tv_item_symbol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/second_typeface"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    android:text="/Hello/"
                    android:layout_below="@id/tv_item_origin"
                    android:layout_marginTop="6dp"
                    />
            </LinearLayout>

            <!--翻译后的文本-->
            <TextView
                android:id="@+id/tv_item_trans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TextStyleTrans"
                android:gravity="right"
                android:text="你好"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <!--左滑后的内容-->
    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="5dp"
        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"

            >
            <LinearLayout
                android:id="@+id/view_item_brief_slide_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="删除"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#ff0000"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/view_item_brief_slide_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="更多"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#00aaff"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>