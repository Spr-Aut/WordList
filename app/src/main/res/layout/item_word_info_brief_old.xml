<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/view_linear"
    >
    <RelativeLayout
        android:id="@+id/view_item_brief"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_horizontal_item"
        android:background="@color/main_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!--源文本-->
            <TextView
                android:id="@+id/tv_item_origin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/padding_vertical_item"
                style="@style/TextStyleOrigin"
                android:text="Hello"
                />
            <!--翻译后的文本-->
            <TextView
                android:id="@+id/tv_item_trans"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginVertical="@dimen/padding_vertical_item"
                android:gravity="right"
                style="@style/TextStyleTrans"
                android:text="你好"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"
            android:layout_alignParentTop="true"
            />
    </RelativeLayout>

    <!--左滑后的内容-->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/view_item_brief_slide_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="删除"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#ff0000"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/view_item_brief_slide_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="更多"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#00aaff"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>