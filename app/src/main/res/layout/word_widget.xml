<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.WordList.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.WordList.AppWidgetContainer"
    android:padding="@dimen/padding_widget">

    <Button
        android:id="@+id/btnWidgetRefresh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        />
    <RelativeLayout
        android:layout_toLeftOf="@+id/btnWidgetRefresh"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tvWidgetWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="translate"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <LinearLayout
            android:id="@+id/view_group_Symbol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tvWidgetWord"
            android:layout_marginVertical="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/transleit/"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/transleit/"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_group_Symbol"
            android:text="vt. vi.翻译；解释；转化；被翻译"
            android:textStyle="bold"
            android:textSize="16sp"
            />
    </RelativeLayout>
</RelativeLayout>