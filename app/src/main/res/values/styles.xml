    <style name="TabText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@drawable/toolbar_text_selector</item>
    </style>

    <!--
    android:background="@drawable/btn_normal_selector"
            android:padding="10dp"
            android:scaleType="fitCenter"
    -->

    <style name="BtnNormal">
        <item name="android:background">@drawable/btn_normal_selector</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BtnHighlight">
        <item name="android:background">@drawable/btn_highlight_selector</item>
    </style>

    <!--源文本-->
    <style name="TextStyleOrigin">
        <item name="android:textColor">@color/main_typeface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!--音标-->
    <style name="TextStyleSymbol">
        <item name="android:textSize">16sp</item>
    </style>

    <!--翻译后的文本-->
    <style name="TextStyleTrans">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>



    <style name="Widget.WordList.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.WordList.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>
