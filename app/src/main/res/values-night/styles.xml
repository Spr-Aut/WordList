<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="TabButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_bg_selector</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/tab_text_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="TabText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@drawable/toolbar_text_selector</item>
    </style>

    <!--
    android:background="@drawable/btn_normal_selector"
            android:padding="10dp"
            android:scaleType="fitCenter"
    -->

    <style name="BtnNormal">
        <item name="android:background">@drawable/btn_normal_selector</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="BtnHighlight">
        <item name="android:background">@drawable/btn_highlight_selector</item>
    </style>

    <!--源文本-->
    <style name="TextStyleOrigin">
        <item name="android:textColor">@color/widget_typeface_main</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

    <!--翻译后的文本-->
    <style name="TextStyleTrans">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>
